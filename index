</audio>

<script>
  // URL name personalization (optional)
  const params = new URLSearchParams(window.location.search);
  const name = params.get("name");
  if (name) {
    document.getElementById("question").innerText =
      `Hey ${name}, will you be my Valentine? ðŸ’˜`;
  }

  // Floating hearts
  setInterval(() => {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerText = "â¤ï¸";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.fontSize = Math.random() * 20 + 15 + "px";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 6000);
  }, 400);

  const noBtn = document.getElementById("noBtn");
  const yesBtn = document.getElementById("yesBtn");
  const buttons = document.getElementById("buttons");
  const memorySection = document.getElementById("memorySection");
  const slideshow = document.getElementById("slideshow");
  const video = document.getElementById("memoryVideo");
  const music = document.getElementById("music");

  let noScale = 1;

  // NO button chaos ðŸ˜ˆ
  noBtn.addEventListener("mouseover", () => {
    const maxX = buttons.clientWidth - noBtn.clientWidth;
    const maxY = buttons.clientHeight - noBtn.clientHeight;

    noBtn.style.left = Math.random() * maxX + "px";
    noBtn.style.top = Math.random() * maxY + "px";

    noScale -= 0.08;
    if (noScale < 0.3) noScale = 0.3;
    noBtn.style.transform = `scale(${noScale})`;
  });

  // Slideshow images (make sure these exist in /media)
  const images = [
    "media/img1.jpg",
    "media/img2.jpg",
    "media/img3.jpg"
  ];

  let currentIndex = 0;

  function startSlideshow() {
    slideshow.src = images[currentIndex];
    setInterval(() => {
      currentIndex = (currentIndex + 1) % images.length;
      slideshow.src = images[currentIndex];
    }, 2500);
  }

  // YES click ðŸ’–
  yesBtn.addEventListener("click", () => {
    document.getElementById("question").innerText = "Best decision ever ðŸ’•";
    buttons.style.display = "none";
    memorySection.style.display = "block";
    music.play();
    startSlideshow();

    setTimeout(() => {
      video.style.display = "block";
      video.play();
    }, 6000);
  });
</script>

